/* component/card/card.wxss */


.mui-panel{    border-radius: 16rpx;    }
.mui-panel__bd{background-color: #ffffff;    border-radius: 16rpx;  }
.mui-panel__header{
    border-top-left-radius: 16rpx;
    border-top-right-radius: 16rpx;
}

.card-box{padding: 28rpx 20rpx 0 20rpx;position: absolute;padding-top: 100rpx;
    display: flex;align-items: center;flex-wrap: wrap;justify-content: space-between;flex:1 }
.card-inner{ width: 346rpx;}
.mui-card{width: 100%;background-color: #ffffff; border-radius:16rpx;margin-bottom: 30rpx;}
.mui-card:nth-last-child(1){margin-bottom: 0;}
.mui-card:nth-last-child(2){margin-bottom: 0;}
.mui-card .mui-card-img{
    width: 100%;
    height: 400rpx;
    flex: 1;
}   
.mui-card .mui-card-content{
    display: flex;align-items: center;justify-content: center;
    flex: 1;
}
.mui-card-padding{
    padding: 12rpx 0 0 12rpx;text-align: left;position: relative;flex: 1;
}
.mui-card-padding view:nth-child(1){
    font-size: 32rpx;
    color: #000000;
    max-width: 234rpx;
    overflow: hidden;text-overflow: ellipsis;white-space: nowrap; 
}
.mui-card-padding view:nth-child(2){
    font-size: 28rpx;color: #bcbcbc;
    margin: 6rpx 0;
    max-width: 234rpx;    
    overflow: hidden;text-overflow: ellipsis;white-space: nowrap;    
    display: flex;align-items: center;
}
.mui-card-padding view:nth-child(2) text{
    overflow: hidden;text-overflow: ellipsis;white-space: nowrap;    
    display: inline-block;
    max-width: 100rpx;margin-right: 16rpx;
}
.mui-card-padding view:nth-child(3){
    
    width:120rpx;border: 1px solid #1195db;
    position: absolute;right: 10rpx;top: 26rpx;color: #41aae2;font-size: 28rpx;
    text-align:center;border-radius: 8rpx;
    overflow: hidden;text-overflow: ellipsis;white-space: nowrap;
    padding:4rpx 0;

}
