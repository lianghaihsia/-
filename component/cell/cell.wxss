.mui-cell::after {
    content: " ";
    display: inline-block;
    height: 9px;
    width: 9px;
    border-width: 1px 1px 0 0;
    border-color: #C8C8CD;
    border-style: solid;
    -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
    top: -6px;
    position: absolute;
    top: 50%;
    margin-top: -6px;
    right: 8px;
}

.mui-hover {
    background-color: rgba(17, 149, 219, 0.4)
}