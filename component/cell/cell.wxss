/* component/cell/cell.wxss */

.mui-cell-group {
    color: #000000;
    background-color: #ffffff;
}

.mui-cell-group .mui-cell {
    line-height: 1;
    background-color: #ffffff;
    position: relative;
    border-bottom: 1px solid #e5e5e5;
    padding: 28rpx 0;
    display: flex;
    align-items: center;
}


/* .mui-cell-group .mui-cell:last-of-type{border-bottom: none;} */

.mui-cell .mui-cell-icon {
    margin-right: 26rpx;
}

.mui-cell .mui-cell-icon image {
    width: 42rpx;
    height: 42rpx;
}

.mui-cell .mui-cell-text {
    color: #000000;
    text-align: left;
    font-size: 26rpx;
    margin-right: 16rpx;
    letter-spacing: 1rpx;
    max-width: 460rpx;
}

.mui-cell .mui-cell-remark {
    font-size: 24rpx;
    color: #999999;
    position: absolute;
    right: 48rpx;
    margin: auto;
}


